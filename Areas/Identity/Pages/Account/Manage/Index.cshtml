@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" disabled required="required"/>
            </div>
            <div class="form-group">

                <input asp-for="Input.PhoneNumber" required="required" />
                <label asp-for="Input.PhoneNumber"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Input.CustomerFullName" required="required" />
                <label asp-for="Input.CustomerFullName"></label>
                <span asp-validation-for="Input.CustomerFullName" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input asp-for="Input.CustomerAge" required="required" />
                <label asp-for="Input.CustomerAge"></label>
                <span asp-validation-for="Input.CustomerAge" class="text-danger"></span>
            </div>
            <div class="form-group">

                <textarea asp-for="Input.CustomerAddress" required="required"></textarea>
                <label asp-for="Input.CustomerAddress"></label>
                <span asp-validation-for="Input.CustomerAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.CustomerDOB" required="required" />
                <label asp-for="Input.CustomerDOB"></label>
                <span asp-validation-for="Input.CustomerDOB" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="styledButton" style="--clr:#1e9bff"><span>Save</span><i></i></button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}