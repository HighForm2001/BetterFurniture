<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BetterFurniture</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/searchBox.css" />
    <link rel="stylesheet" href="~/css/button.css" />
    <link rel="stylesheet" href="~/css/Furniture.css" />
    <link rel="stylesheet" href="~/css/table.css" />
    <link rel="stylesheet" href="~/css/inputBox.css" />
    <link rel="stylesheet" href="~/css/home.css" />
</head>
<body>
    <header>
        <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">BetterFurniture</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <ul>
            <partial name="_Loginpartial" />
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>

            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a asp-area="" asp-controller="InventoryManagement" asp-action="InventoryOverview">InventoryManagement</a>
                </li>
                <li>
                    <a asp-area="" asp-controller="OrderManagement" asp-action="OrderOverview">OrderManagement</a>
                </li>
            }
            <li>
                <a asp-area="" asp-controller="Cart" asp-action="CartPage">Cart</a>
            </li>
            <li>
                <a asp-area="" asp-controller="OrderManagement" asp-action="OrderStatus">Order Status</a>
            </li>

        </ul>
    </header>
    <section class="banner"></section>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <div id="test"></div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BetterFurniture - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script type="text/javascript">
        window.addEventListener("scroll", function () {
            var header = document.querySelector("header");
            header.classList.toggle("sticky", window.pageYOffset > 0);
        })
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
