@model Furniture

@{
    ViewData["Title"] = "CreateView";
}

<body>
    <center>
        <h1 class="title inventory">
            Create Furniture
        </h1>
        <span style="color:crimson">@ViewBag.Msg</span>
        <form asp-action="Create" asp-controller="InventoryManagement" method="post" enctype="multipart/form-data">
            <table border="1" class="table-custom">
                <tr class="row-title">
                    <th class="row-content">Furniture Name</th>
                    <td>
                        <input class="row-content" asp-for="Name" />
                        <span class="row-content" asp-validation-for="Name" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="row-title">
                    <th class="row-content">Description</th>
                    <td>
                        <textarea class="row-content text-box" asp-for="Description"></textarea>
                        <span class="row-content" asp-validation-for="Description" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="row-title">
                    <th class="row-content">Price</th>
                    <td>
                        <input class="row-content" asp-for="Price" type="number" min="0" step=".01" />
                        <span class="row-content" asp-validation-for="Price" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="row-title">
                    <th class="row-content">Quantity</th>
                    <td>
                        <input class="row-content" asp-for="Quantity" type="number" min="1" step="1" />
                        <span class="row-content" asp-validation-for="Quantity" class="text-danger"></span>
                    </td>
                </tr>
                <tr class="row-title">
                    <th class="row-content">Furniture Images</th>
                    <td>
                        <input type="file" name="imageFile" accept="image/*" multiple />
                    </td>
                </tr>
            </table>
            <input class="btn-submit" type="submit" value="Create Furniture" />
        </form>
    </center>
</body>
