@model Furniture 
@{
    ViewData["Title"] = "CreateView";
}
@if (ViewBag.Msg != null)
            {
                <script>
                    alert("@ViewBag.Msg");
                </script>
            }
<h1>CreateView</h1>

<center>
    <span style="color:crimson">ViewBag msg: @ViewBag.Msg</span>
    <form asp-action="Create" asp-controller="InventoryManagement" method="post" enctype="multipart/form-data">
        <table border="1">
            <tr>
                <th>Furniture Name</th>
                <td>
                    <input asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>
                    <textarea asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Price</th>
                <td>
                    <input asp-for="Price" type="number" min="0" step=".01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>
                    <input asp-for="Quantity" type="number" min="1" step="1" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th>Furniture Images</th>
                <td>
                    <input type="file" name="imageFile" accept="image/*" multiple/>
                </td>
            </tr>
        </table>
        <input type="submit" value="Create Furniture" />
    </form>
</center>