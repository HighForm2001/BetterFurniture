
@model Furniture
@{
    ViewData["Title"] = "EditView";
}
<body>
    <center>
        <h1 class="title inventory">
            Edit Furniture Information for @Model.Name
        </h1>
        <span style="color:red">@ViewBag.Msg</span>
        <form asp-action="Edit" asp-controller="InventoryManagement" method="post" enctype="multipart/form-data">
            <div class="form-group" style="display:none">
                <input asp-for="@Model.ID" required="required" readonly />
                <label asp-for="@Model.ID"></label>
                <span asp-validation-for="@Model.ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Name" required="required" />
                <label asp-for="@Model.Name"></label>
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <textarea asp-for="@Model.Description" required="required"></textarea>
                <label asp-for="@Model.Description"></label>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Price" required="required" />
                <label asp-for="@Model.Price"></label>
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="@Model.Quantity" required="required" />
                <label asp-for="@Model.Quantity"></label>
                <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <input asp-for="@Model.ImageUrls" required="required" />
                <label asp-for="@Model.ImageUrls"></label>
                <span asp-validation-for="@Model.ImageUrls" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="alert">Insert Pictures</label>
                <input class="btn-submit" type="file" name="imageFile" accept="image/*" multiple />

                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
