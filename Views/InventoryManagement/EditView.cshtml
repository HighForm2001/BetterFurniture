            <br />
            <button type="submit" class="styledButton" style="--clr:#00ff21"><span>Edit Furniture: @Model.Name</span><i></i></button>
        </form>
        <br />
        <form asp-action="DeleteSingleImage" asp-controller="InventoryManagement" method="post" enctype="multipart/form-data">
            <table border="1">
                <tr>
                    <th class="row-content">Furniture Images</th>
                    <td>
                        @if (Model.ImageUrls.Length > 0)
                        {
                            foreach (var url in Model.ImageUrls.Split(","))
                            {
                                <img src="@url" width="200" height="200" />
                                <button type="submit" class="styledButton" asp-action="DeleteSingleImage"
                                         style="--clr:red"
                                        asp-route-imgUrl="@url" asp-route-id="@Model.ID"><span>Delete</span><i></i></button>
                            }
                        }
                        else
                        {
                            <span class="row-content">No Image available for this product</span>
                        }

                    </td>
                </tr>

            </table>
        </form>
    </center>

</body>
