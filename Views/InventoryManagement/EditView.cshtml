            <tr>
                <th class="row-content">Furniture ID</th>
                <td>
                    <input class="row-content" asp-for="@Model.ID" readonly />
                    <span class="row-content" asp-validation-for="@Model.ID" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th class="row-content">Furniture Name</th>
                <td>
                    <input class="row-content" asp-for="@Model.Name" />
                    <span class="row-content" asp-validation-for="@Model.Name" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th class="row-content">Description</th>
                <td>
                    <textarea class="row-content text-box" asp-for="@Model.Description"></textarea>
                    <span class="row-content" asp-validation-for="@Model.Description" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th class="row-content">Price</th>
                <td>
                    <input class="row-content" asp-for="@Model.Price" type="number" min="0" step=".01" />
                    <span class="row-content" asp-validation-for="@Model.Price" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th class="row-content">Quantity</th>
                <td>
                    <input class="row-content" asp-for="@Model.Quantity" type="number" min="1" step="1" />
                    <span class="row-content" asp-validation-for="@Model.Quantity" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th style="display:none">Url</th>
                <td>
                    <input asp-for="@Model.ImageUrls" style="display:none" />
                    <span asp-validation-for="@Model.ImageUrls" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <th class="row-content">Insert Pictures</th>
                <td>
                    <input class="btn-submit" type="file" name="imageFile" accept="image/*" multiple />
