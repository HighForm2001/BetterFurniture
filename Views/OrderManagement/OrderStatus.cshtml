@model List<Order>;
@{
    ViewData["Title"] = "OrderStatus";
}

<h1>OrderStatus</h1>

@if (Model.Count == 0)
{
    <h1>You did not purchase any item yet. Click <a asp-controller="Home" asp-action="Index">here</a> to purchase item!</h1>
}
else
{
<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Shipping Address</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Status</th>
            <th>Item Name</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.CustomerName</td>
                <td>@order.ShippingAddress</td>
                <td>@order.CustomerEmail</td>
                <td>@order.CustomerPhone</td>
                <td>@order.Status</td>
                <td>
                    <ul>
                        @foreach (var item in order.ItemName)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </td>
                <td>@order.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>
}