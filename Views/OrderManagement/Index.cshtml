@model List<Order>
@{
    ViewData["Title"] = "Index";
}

<h1>Order Management System</h1>

<center>
    <h1>Purchase Order Information: </h1>
    <br /><hr /><br />
    <table border="1">
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Shipping Address</th>
            <th>Customer Email</th>
            <th>Customer Phone</th>
            <th>Status</th>
            <th>Order Item(s)</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.OrderID
                </td>
                <td>@item.CustomerName</td>
                <td>@item.ShippingAddress</td>
                <td>@item.CustomerEmail</td>
                <td>@item.CustomerPhone</td>
                <td>@item.Status</td>
                <td>
                    @foreach (var order_item in item.ItemName)
                    {
                        <span>@order_item</span>
                    }
                </td>
                <td>
                    <a asp-action="EditOrder" asp-controller="OrderManagement" asp-route-id="@item.OrderID">Edit</a>
                    <a asp-action="Delete" asp-controller="OrderManagement" asp-route-order="@item">Delete</a>
                </td>
            </tr>
        }
    </table>
</center>

