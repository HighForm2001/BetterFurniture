@model List<Order>
@{
    ViewData["Title"] = "Index";
}

<h1>Order Management System</h1>

<center>
    <h1>Purchase Order Information: </h1>
    <span style="color:@ViewBag.color">@ViewBag.Msg</span>
    <br /><hr /><br />
    @if (Model.Count > 0)
    {
        <table border="1">
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Shipping Address</th>
                <th>Customer Email</th>
                <th>Customer Phone</th>
                <th>Status</th>
                <th>Order Item(s)</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.OrderID
                    </td>
                    <td>@item.CustomerName</td>
                    <td>@item.ShippingAddress</td>
                    <td>@item.CustomerEmail</td>
                    <td>@item.CustomerPhone</td>
                    <td>@item.Status</td>
                    <td>
                        <ul>
                            @foreach (var order_item in item.ItemName)
                            {
                                <li>@order_item</li>
                            }
                        </ul>
                    </td>
                    <td>
                        <a asp-action="EditOrder" asp-controller="OrderManagement" asp-route-id="@item.OrderID">Edit</a>
                        <a asp-action="Delete" asp-controller="OrderManagement" asp-route-id="@item.OrderID">Delete</a>
                    </td>
                </tr>
            }
        </table>      }
            else
            {
                <span style="color:red">No Order is created.</span>
            }

</center>

