@model Furniture;
@{
    ViewData["Title"] = "Product Details - " + Model.Name;
}

<button class="back-button" onclick="window.history.back()">Go Back</button>

<h1>@Model.Name</h1>
<center>
    <div id="update_succesful_id"></div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.ImageUrls.Split(",").Length; i++)
            {
                if (i == 0)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                }
                else
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @for (int i = 0; i < Model.ImageUrls.Split(",").Length; i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active">
                        <img class="d-block w-100 furniture-image" src="@Model.ImageUrls.Split(",")[i]" alt="First slide">
                    </div>
                }
                else
                {
                    <div class="carousel-item">
                        <img class="d-block w-100 furniture-image" src="@Model.ImageUrls.Split(",")[i]" alt="Second slide">
                    </div>
                }
            }
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


</center>
<br />
<hr />
<div class="furniture-details" style="align-content:end;">
    <p>@Model.Description</p>
    <p>Price: $@Model.Price</p>
    @if (Model.Quantity > 0)
    {
        <form asp-action="AddToCart" asp-controller="Cart" asp-route-furnitureName="@Model.Name">
            <button type="submit" asp-action="AddToCartFromDetail" asp-controller="Cart" asp-route-itemName="@Model.Name" onclick="window.history.back()">Add to Cart!</button>
        </form>
    }
    else
    {
        <button disabled class="out-of-stock-button">Out of Stock!</button>
    }

</div>
