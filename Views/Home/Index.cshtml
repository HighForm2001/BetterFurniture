@model List<Furniture>;
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div id="update_succesful_id" style="color:lawngreen">@TempData["update"]</div>
</div>

<form method="get" action="@Url.Action("Search", "Home")">
    <input type="text" name="query" placeholder="Search for furniture">
    <input type="submit" value="Search">
</form>

@if (Model.Count > 0)
{
    <div id="update_succesful_id"></div>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img src="@item.ImageUrls.Split(",")[0]" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="ProductDetails" asp-controller="Product" asp-route-furniture="@JsonConvert.SerializeObject(item)">@item.Name</a>

                        </h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text">@item.Price</p>
                        @if (item.Quantity > 0)
                        {
                            <button class="btn btn-primary addToCartBtn" data-itemId="@item.Name" onclick="addToCart(this)">Add to Cart</button>
                        }
                        else
                        {
                            <button disabled class="out-of-stock-button">Out of Stock!</button>
                        }

                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <span style="color:red">@TempData["msg"]</span>
}

<h1 id="time"></h1>

<script>
    
</script>

